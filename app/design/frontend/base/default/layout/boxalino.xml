<?xml version="1.0"?>

<layout version="0.1.0">
    <!--All pages-->
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/boxalino.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/boxalinoAutocomplete.js</name>
            </action>
            <action method="addItem" ifconfig="Boxalino_General/jquery/jquery_file">
                <type>skin_js</type>
                <name>js/jquery-1.10.2.min.js</name>
            </action>
            <action method="addItem" ifconfig="Boxalino_General/jquery/noconflict_file">
                <type>skin_js</type>
                <name>js/jquery-noConflict.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jssor-26.1.5.min.js</name>
            </action>
        </reference>
        <reference name="before_body_end">
            <block type="boxalino_intelligence/script" name="intelligence_script" template="boxalino/script.phtml"/>
        </reference>
    </default>
    <!-- Home -->
    <cms_index_index>
        <reference name="content">
            <block type="boxalino_intelligence/Banner" name="intelligence_banner" after="-" before="default_home_page" template="boxalino/banner.phtml"/>
        </reference>
    </cms_index_index>
    <!--Search-->
    <catalogsearch_result_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/nouislider.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/nouislider.js</name>
            </action>
        </reference>
        <reference name="content">
            <block type="boxalino_intelligence/searchMessage" name="searchMessage" before="top_filter"
                   template="boxalino/catalogsearch/searchMessage.phtml" />
            <block type="boxalino_intelligence/facets" name="top_filter" as="search_top_filter" before="-"
                   template="boxalino/top_filter.phtml" />
        </reference>
    </catalogsearch_result_index>
    <!--Navigation-->
    <catalog_category_layered>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/nouislider.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/nouislider.js</name>
            </action>
        </reference>
        <reference name="content">
            <block type="boxalino_intelligence/facets" name="top_filter" as="listing_top_filter" before="-"
                   template="boxalino/top_filter.phtml" />
        </reference>
    </catalog_category_layered>
</layout>
